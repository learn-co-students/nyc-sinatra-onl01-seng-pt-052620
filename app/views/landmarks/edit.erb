<form method = "POST" action = "/landmarks/<%= @landmark.id %>">
<input type = "hidden" id = "hidden" name = "_method" value = "PATCH">
<p><label>Name:</label><input type = "text" id = "name" name = "landmark[name]" value = "<%= @landmark.name %>"></p>
<p><label>Year Completed:</label><input type = "text" id = "year_completed" name = "landmark[year_completed]" value = "<%= @landmark.year_completed %>"></p>
