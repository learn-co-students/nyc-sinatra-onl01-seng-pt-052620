<form method = "POST" action = "/figures/new">
<h3><label>Figure Name:</label><input type = "text" id = "figure_name" name = "figure[name]">
<h3><label>Titles</label></h3>
<% Title.all.each do |title| %>
<input type = "checkbox" id = "title_<%= title.id %>" name = "figure[title_ids][]" value = "<%= title.id %>"><%= title.name %><br>
<% end %>
<h3><label>Create New Title:</label></h3>
<input type = "text" id = "new_title" name = "title[name]">
<h3><label>Landmarks</label></h3>
<% Landmark.all.each do |landmark| %>
<input type = "checkbox" id = "landmark_<%= landmark.id %>" name = "figure[landmark_ids][]" value = "<%= landmark.id %>"><%= landmark.name %><br>
<% end %>
<h3>Create New Landmark:</h3>
<p><label>Name:</label><input type = "text" id = "new_landmark" name = "landmark[name]"></p>
<input type = "submit" id = "Create New Figure" value = "Create New Figure">